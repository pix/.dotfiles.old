#!/bin/sh

if which apt-get 2>&1 >/dev/null; then
    apt-get update
    apt-get install \
        zsh realpath tmux \
        ncurses-term
        vim \
        git \
        ack-grep \
        openssh-server

    case "$1" in
        dev)
            apt-get install \
                build-essential \
                git-svn \
                exuberant-ctags \
                autoconf cmake \
                valgrind
            ;;
        gui)
            apt-get install \
                rxvt-unicode
            ;;
        avr)
            apt-get install \
                avarice \
                avr-libc \
                avrdude \
                binutils-avr \
                gcc-avr \
                gdb-avr
            ;;
        *)
            ;;
    esac
fi
