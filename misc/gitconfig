[color]
	ui = auto 

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = blue bold
	frag = cyan 
	old = magenta 
	new = green 

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

